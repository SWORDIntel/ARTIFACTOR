# ARTIFACTOR v3.0 Environment Configuration
# Copy this file to .env and update values for your environment

# =====================================
# ENVIRONMENT SETTINGS
# =====================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# =====================================
# DATABASE CONFIGURATION
# =====================================
POSTGRES_PASSWORD=artifactor123
POSTGRES_PORT=5432
DATABASE_URL=postgresql://artifactor:artifactor123@postgres:5432/artifactor

# =====================================
# REDIS CONFIGURATION
# =====================================
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# =====================================
# APPLICATION PORTS
# =====================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
ML_SERVICE_PORT=8001
HTTP_PORT=80
HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
METRICS_PORT=9090
ML_METRICS_PORT=9091

# =====================================
# SECURITY CONFIGURATION
# =====================================
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# =====================================
# OAUTH CONFIGURATION
# =====================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =====================================
# WORKER CONFIGURATION
# =====================================
WORKERS=4
MAX_WORKERS=16
WORKER_CONNECTIONS=1000
WORKER_CONCURRENCY=4
WORKER_LOG_LEVEL=info
SCHEDULER_LOG_LEVEL=info

# =====================================
# ML CONFIGURATION
# =====================================
ENABLE_ML_CLASSIFICATION=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_GPU=false
ML_BATCH_SIZE=32
ML_MAX_WORKERS=4
ML_WORKER_TIMEOUT=300
MODEL_CACHE_SIZE=512MB

# =====================================
# FEATURE FLAGS
# =====================================
ENABLE_METRICS=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE=true
LEGACY_DOWNLOADER_ENABLED=true
PLUGIN_SANDBOX_ENABLED=true
BACKUP_ENABLED=true

# =====================================
# MONITORING CONFIGURATION
# =====================================
GRAFANA_PASSWORD=admin123

# =====================================
# REACT APP CONFIGURATION
# =====================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_VERSION=3.0.0
REACT_APP_ENVIRONMENT=development
REACT_APP_GITHUB_CLIENT_ID=your-github-client-id

# =====================================
# CLOUD STORAGE (Optional)
# =====================================
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
S3_REGION=us-east-1

# =====================================
# EMAIL CONFIGURATION (Optional)
# =====================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=ARTIFACTOR

# =====================================
# PLUGIN CONFIGURATION
# =====================================
PLUGIN_MAX_EXECUTION_TIME=300
PLUGIN_MAX_MEMORY=512m

# =====================================
# BACKUP CONFIGURATION
# =====================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30