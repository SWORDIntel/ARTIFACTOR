# Agent Bridge Service Dockerfile for ARTIFACTOR v3.0
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install system dependencies and Python packages in single layer
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    libpq-dev \
    curl \
    && pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt \
    && apt-get purge -y --auto-remove gcc g++ \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /root/.cache/pip

# Copy application code selectively
COPY agent_bridge/ ./agent_bridge/
COPY main.py .
COPY __init__.py .

# Create necessary directories with proper permissions
RUN mkdir -p agent_data logs tmp && \
    chmod 755 agent_data logs tmp

# Create non-root user with proper security settings
RUN useradd -m -u 1000 -s /bin/bash appuser && \
    chown -R appuser:appuser /app && \
    chmod -R 755 /app

# Switch to non-root user
USER appuser

# Set secure umask
RUN echo 'umask 0022' >> /home/appuser/.bashrc

# Expose port for agent bridge
EXPOSE 8001

# Health check for agent bridge with fallback
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8001/health || wget --quiet --tries=1 --spider http://localhost:8001/health || exit 1

# Set environment variables for security
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Agent bridge command with proper signal handling
CMD ["python", "-m", "agent_bridge.main"]